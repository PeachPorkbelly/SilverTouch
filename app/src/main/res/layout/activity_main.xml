<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="381dp" />

    <TextView
        android:id="@+id/khtextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="381dp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/digital_farm"
            android:layout_width="wrap_content"
            android:layout_height="196dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/main_farm_bg" />

        <ImageView
            android:id="@+id/leaf_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="170dp"
            app:srcCompat="@drawable/main_farm_flower" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/today_mission"
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            app:srcCompat="@drawable/main_misson_bg" />


        <ImageButton
            android:id="@+id/main_mission1_uncompleted"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/main_misson_btn_01" />

        <ImageView
            android:id="@+id/main_mission1_completed"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/main_misson_btn_01_complete" />


        <ImageButton
            android:id="@+id/main_mission2_uncompleted"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="155dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/main_misson_btn_02" />

        <ImageView
            android:id="@+id/main_mission2_completed"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="155dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/main_misson_btn_02_complete" />

        <ImageButton
            android:id="@+id/main_mission3_uncompleted"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="210dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/main_misson_btn_03" />


        <ImageView
            android:id="@+id/main_mission3_completed"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="210dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/main_misson_btn_03_complete" />

        <ImageView
            android:id="@+id/main_emptyGraph"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="200dp"
            app:srcCompat="@drawable/main_misson_graph_00" />

        <ImageView
            android:id="@+id/main_graph1"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="200dp"
            app:srcCompat="@drawable/main_misson_graph_01" />

        <ImageView
            android:id="@+id/main_graph2"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="200dp"
            app:srcCompat="@drawable/main_misson_graph_02" />

        <ImageView
            android:id="@+id/main_graph3"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="200dp"
            app:srcCompat="@drawable/main_misson_graph_03" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/inssatest"
            android:layout_width="156dp"
            android:layout_height="102dp"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/main_inssatest" />

        <ImageButton
            android:id="@+id/cardmaking"
            android:layout_width="155dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="46dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/main_card" />
    </LinearLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />


</LinearLayout>