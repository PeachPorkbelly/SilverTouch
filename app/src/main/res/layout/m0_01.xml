<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/m0_01_background">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="96dp">

        <ImageView
            android:id="@+id/m0_01_mission_order_1"
            android:layout_width="90.2dp"
            android:layout_height="25.5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/misson_contents_1" />

        <ImageView
            android:id="@+id/m0_01_mission_order_2"
            android:layout_width="90.2dp"
            android:layout_height="25.5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/misson_contents_2" />

        <ImageView
            android:id="@+id/m0_01_mission_order_3"
            android:layout_width="90.2dp"
            android:layout_height="25.5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/misson_contents_3" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/m0_01_jumin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="110.5dp"
        android:layout_marginLeft="368.5dp"
        android:layout_width="87dp"
        android:layout_height="46.54dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/m0_01_jumin" />

    <ImageButton
        android:id="@+id/m0_01_hint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="259dp"
        android:layout_marginLeft="70dp"
        android:layout_width="158.5dp"
        android:layout_height="53dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/mission_hint"
        android:background="@android:color/transparent"/>

    <FrameLayout
        android:id="@+id/m0_01_transparent_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="487dp"
        android:layout_height="362dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="305dp"
        android:background="#66000000">

    </FrameLayout>

    <ImageButton
        android:id="@+id/m0_01_exit"
        android:layout_width="23.7dp"
        android:layout_height="23.7dp"
        android:layout_marginLeft="137dp"
        android:layout_marginTop="55dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/misson_exit" />


</androidx.constraintlayout.widget.ConstraintLayout>