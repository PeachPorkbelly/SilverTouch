<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mission.burger.M0_01">

    <ImageView
        android:id="@+id/line"
        android:layout_width="350dp"
        android:layout_height="427dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/mission_bg_line3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hint" />
    <ImageView
        android:id="@+id/line2"
        android:layout_width="350dp"
        android:layout_height="73dp"
        android:src="@drawable/mission_bg_line2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />
    <ImageButton
        android:id="@+id/hint"
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:layout_marginTop="80dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/misson_btn_hint"
        tools:layout_editor_absoluteY="171dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="299dp"
        android:layout_height="51dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kiosk_0021_kiosk_misson" />

    <ImageButton
        android:id="@+id/discount"
        android:layout_width="138dp"
        android:layout_height="60dp"
        android:layout_marginBottom="78dp"
        android:layout_marginLeft="70dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toRightOf="@id/call"
        app:srcCompat="@drawable/discount" />

    <ImageButton
        android:id="@+id/disabled"
        android:layout_width="39dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/mission_bg_disabled" />

    <ImageButton
        android:id="@+id/lens"
        android:layout_width="39dp"
        android:layout_height="48dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/lens"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@id/disabled"
        app:layout_constraintTop_toBottomOf="@id/line"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="611dp" />

    <ImageButton
        android:id="@+id/call"
        android:layout_width="39dp"
        android:layout_height="48dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/mission_bg_call"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@id/lens"
        app:layout_constraintTop_toBottomOf="@id/line" />


    <ImageButton
        android:id="@+id/card"
        android:layout_width="360dp"
        android:layout_height="170dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/line"
        app:srcCompat="@drawable/card" />

    <ImageButton
        android:id="@+id/cash"
        android:layout_width="152dp"
        android:layout_height="165dp"
        android:layout_marginLeft="180dp"
        android:layout_marginBottom="150dp"
        android:layout_marginTop="250dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@id/line"
        app:layout_constraintLeft_toLeftOf="@id/line"
        app:srcCompat="@drawable/cash" />

    <ImageButton
        android:id="@+id/digital"
        android:layout_width="166dp"
        android:layout_height="186dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="0dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@id/line"
        app:layout_constraintStart_toStartOf="@id/line"
        app:srcCompat="@drawable/digital" />
</androidx.constraintlayout.widget.ConstraintLayout>